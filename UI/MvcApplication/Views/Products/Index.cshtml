@model IEnumerable<StoreProject.Core.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Sku</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@Html.ActionLink("Details", "Details", new { id = product.Sku })</td>
        </tr>
    }
</table>
